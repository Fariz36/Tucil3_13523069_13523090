<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.VisualizationController">
   <top>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="statsLabel" styleClass="stats-label" text="Statistics will appear here" />
            <Separator />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="boardCanvas" height="500.0" width="500.0" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </StackPane>
   </center>
   
   <bottom>
      <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="statusLabel" styleClass="status-label" text="Ready" />
            <Label fx:id="currentMoveLabel" text="Move information will appear here" />
            
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="playButton" onAction="#handlePlay" text="Play" />
                  <Button fx:id="pauseButton" disable="true" onAction="#handlePause" text="Pause" />
                  <Button fx:id="resetButton" onAction="#handleReset" text="Reset" />
                  <Button fx:id="saveButton" onAction="#handleSave" text="Save Solution" />
               </children>
            </HBox>
            
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Speed:" />
                  <Slider fx:id="speedSlider" max="3.0" min="0.5" prefWidth="200.0" showTickLabels="true" showTickMarks="true" value="1.0" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </bottom>
</BorderPane>